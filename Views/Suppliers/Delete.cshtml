@model FoodMgmt.Models.Supplier
@{
    ViewData["Title"] = "Delete Supplier";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Supplier</h4>
        </div>

        <div class="card-body">
            <h5>Are you sure you want to delete this supplier?</h5>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
            </dl>

            @if (Model.FoodItems != null && Model.FoodItems.Any())
            {
                <div class="alert alert-warning mt-3">
                    <strong>Warning:</strong> This supplier has linked food items.
                    You must remove or reassign those items before deleting.
                </div>
            }

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />

                <div class="text-center">
                    <button type="submit" class="btn btn-danger px-4 me-2"
                            @(Model.FoodItems != null && Model.FoodItems.Any() ? "disabled" : "")>
                        Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
