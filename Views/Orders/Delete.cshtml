@model FoodMgmt.Models.Order
@{
    ViewData["Title"] = "Delete Order";
}

<h2 class="text-danger">Delete Order</h2>
<hr />

<div class="alert alert-warning">
    <strong>Warning:</strong> Are you sure you want to delete this order? This action will also restore item stock.
</div>

<div class="card p-3 shadow-sm">
    <h4>Order ID: @Model.Id</h4>
    <p><strong>Customer:</strong> @Model.Customer.FullName</p>
    <p><strong>Date:</strong> @Model.OrderDate.ToString("g")</p>
    <p><strong>Total:</strong> ₹@Model.GrandTotal</p>

    <h5>Order Items:</h5>
    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                <th>Item</th>
                <th>Qty</th>
                <th>Unit Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@item.FoodItem.Name</td>
                    <td>@item.Quantity</td>
                    <td>₹@item.UnitPrice</td>
                    <td>₹@(item.Quantity* item.UnitPrice)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@err.ErrorMessage</p>
        }
    </div>
}
