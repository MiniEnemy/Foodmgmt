@model IEnumerable<FoodMgmt.Models.Customer>
@{
    ViewData["Title"] = "Customers";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Customers</h2>

    <form method="get" class="mb-3 d-flex justify-content-center">
        <input type="text" name="search" value="@Context.Request.Query["search"]"
               class="form-control w-50 me-2" placeholder="Search by name or email" />
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Reset</a>
    </form>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">Add Customer</a>
    </div>

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr><td colspan="4" class="text-center">No customers found.</td></tr>
            }
            else
            {
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.FullName</td>
                        <td>@c.Email</td>
                        <td>@c.Phone</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-primary me-1">Edit</a>

                            <form asp-action="Delete" asp-route-id="@c.Id" method="post"
                                  class="d-inline" onsubmit="return confirm('Delete this customer?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
