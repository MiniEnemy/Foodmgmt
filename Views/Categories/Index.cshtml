@model IEnumerable<FoodMgmt.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <h2 class="mb-3">Categories</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Add Category</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
